<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="9"
        tools:context=".fragments.SittingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.75"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_lang"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_logo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/homefont"
                android:text="all your tasks in one places"
                android:textColor="@color/violet"
                android:textSize="18sp" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="2"
            app:cardBackgroundColor="@color/bluelighit"
            app:cardCornerRadius="30dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/img_translate"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/ic_translator" />

                <TextView
                    android:id="@+id/tv_eng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="45dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/homefont"
                    android:text="English"
                    android:textColor="@color/white"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/tv_ar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="45dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/homefont"
                    android:text="العــربية"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
            </RelativeLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:layout_weight="3"
            app:cardBackgroundColor="@color/bluelighit"
            app:cardCornerRadius="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginRight="10dp">

                    <ImageView
                        android:id="@+id/img_shar"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_share" />

                    <TextView
                        android:id="@+id/tv_sharr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_shar"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/homefont"
                        android:text="Share"
                        android:textColor="@color/violet"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/img_rate"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_feedback" />

                    <TextView
                        android:id="@+id/tv_rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_rate"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/homefont"
                        android:text="Rate us Five"
                        android:textColor="@color/violet"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/img_update"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_updated"
                        android:contentDescription="TODO" />

                    <TextView
                        android:id="@+id/tv_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_rate"
                        android:layout_alignParentRight="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginRight="15dp"
                        android:fontFamily="@font/homefont"
                        android:gravity="center"
                        android:text="Update"
                        android:textColor="@color/violet"
                        android:textSize="15sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img_email"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_alignParentLeft="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="35dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_mail" />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_email"
                        android:layout_alignParentLeft="true"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/homefont"
                        android:text="Connect us"
                        android:textColor="@color/violet"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/img_face"
                        android:layout_width="45sp"
                        android:layout_height="45sp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@id/img_email"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ic_facebook" />

                    <TextView
                        android:id="@+id/tv_face"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/img_face"
                        android:layout_marginLeft="52dp"
                        android:layout_marginTop="3dp"
                        android:layout_toRightOf="@id/img_email"
                        android:fontFamily="@font/homefont"
                        android:text="Follow us"
                        android:textColor="@color/violet"
                        android:textSize="15sp" />

                </RelativeLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="10dp"
            android:layout_weight="2.25"
            android:orientation="vertical"
            android:weightSum="5">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4">

                <ImageView

                    android:id="@+id/img_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="8dp"
                    android:layout_marginTop="30dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/flower" />
            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:fontFamily="@font/homefont"
                android:gravity="bottom|center_horizontal"
                android:text="جميع الحقوق محفوظة @dmgshams"
                android:textColor="@color/violet"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</layout>