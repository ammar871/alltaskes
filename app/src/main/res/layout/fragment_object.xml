<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bluelighit"
        tools:context="com.alltaskesnew.thecalclatur.fragments.ObjectFragment">

        <LinearLayout
            android:id="@+id/tv_isemptty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_no_obejcts"
                android:layout_gravity="center"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="35sp"
                android:textColor="@color/white"
                android:text="@string/no_object"
                android:fontFamily="@font/homefont"
                android:layout_gravity="center"

                />

        </LinearLayout>

      <androidx.recyclerview.widget.RecyclerView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
          android:id="@+id/rv_obeject">

      </androidx.recyclerview.widget.RecyclerView>
        <ImageView
            android:id="@+id/img_add"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/ic_baseline_add_24"
            android:layout_marginBottom="30dp"
            android:background="@drawable/circle_black"
            android:padding="4dp"/>


    </RelativeLayout>
</layout>